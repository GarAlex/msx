	DB	'  COPY [/f][/v] filename [/b/a][+..+filename[/b/a] [filename]                   '
	DB	'  TYPE [/f/p] filename                                                          '
	DB	'  REN filename filename                                                         '
	DB	'  DEL [/f] filename                                                             '
	DB	'  PRINT [/f] filename                                                           '
